use "gfx";

func main(args) {
	if gfx.init() == 0 {
		println("Failed to init gfx!");
		return;
	}
	
	if gfx.create_window("Hello BS!", 800, 600, 0) == 0 {
		println("Failed to create gfx window!");
		return;
	}
	
	var running = 1;
	
	var x = 0;
	var y = 0;
	
	while running {
		gfx.clear();
		
		gfx.fill_rect(x, y, 50, 50, 255, 127, 0);
		x = x + 0.01;
		y = y + 0.01;
		
		gfx.present();
		gfx.update();
		if gfx.should_close() {
			running = 0;
		}
	}
}